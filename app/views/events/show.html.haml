- current_tab('events')
.in#event
  .leftColumn
    %h2
      = @event.title
    %h3= @event.date.strftime("%d %B %Y")
    %h4
      - if @event.group
        [#{link_to @event.group.name, group_url(@event.group.unique_name)}]
    %p.description
      - if @event.group.nil?
        = @event.description
      - else
        :markdown
          #{@event.description}
    %strong.highlighter= @event.country + "/" + @event.city
    - unless @event.link.to_s.empty?
      %p
        = link_to "website", @event.link
    %p
    %h3 
      Attendees (#{@event.attendees.size})
    %p
      - @event.attendees.each do |u|
        %a{:href=>user_path(u.username), :title=> u.full_name}
          .profile_picture_medium
            != u.medium_profile_picture.to_html
  .rightColumn
    - if @event.has_attendee?(current_user)
      - attendance = @event.attendance_for_user(current_user)
      = form_tag(attendance_url(attendance.id), :method => :delete) do
        = submit_tag 'Unattend this event', :class => 'alternative'
        = hidden_field_tag :event_id, @event.id
    - else
      = form_for(Attendance.new) do |f|
        = f.submit 'Attend this event'
        = hidden_field_tag :event_id, @event.id
  .clear
