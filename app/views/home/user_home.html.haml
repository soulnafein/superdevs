- current_tab('home')
:javascript
  _gaq.push(['_setVar', 'member']);
#user_home
  .in
    #left_column
      %h2
        What's going on
      %ul.updates
        - @user_home_presenter.friends_activities.each do |fa|
          %li
            .profile_picture_medium
              != fa.friend.medium_profile_picture.to_html
            .update
              %h3= link_to fa.friend.full_name, user_url(fa.friend.username)
              %p
                is attending
                = link_to fa.activity.event.title, event_url(fa.event.id)
                on the
                = fa.event.date.strftime("%d %B %Y")
              %p.actions
                %span.date= distance_of_time_in_words(fa.date, Time.now.utc) + ' ago'
                %span.v_line= "|"
                = link_to "Attend", attend_event_url(fa.event.id)
                %span.v_line= "|"
                = link_to "Track", track_event_url(fa.event.id)

    #right_column
      - unless current_user.following.empty?
        #following.relationships
          %h2.following Following
          - current_user.following.each do |u|
            %a{:href=>user_path(u.username), :title=> u.full_name}
              != u.small_profile_picture.to_html
      - unless current_user.followers.empty?
        #followers.relationships
          %h2.followers Followers
          - current_user.followers.each do |u|
            %a{:href=> user_path(u.username), :title=> u.full_name}
              != u.small_profile_picture.to_html
      %h2.events Your events
      = render :partial => 'shared/events',
               :locals => {:events => @user_home_presenter.attended_or_tracked_events}

