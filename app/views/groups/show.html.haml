- title("#{@group.name} at SuperDevs")
- current_tab("groups")
.in
  %h2= @group.name
.line
.in
  #group_page
    .description
      :markdown
        #{@group.description}
    .members
      %h3 Members
      %ul
        - @group.members.each do |user|
          %li{:class => cycle('even', 'odd')}
            %h5
              = link_to user.full_name, user_path(user.username)
              (Organizer)
            .profile_picture_medium
              != user.medium_profile_picture.to_html

