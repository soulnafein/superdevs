<!-- Intro -->

<div class="in">
  <h2>Superdevs</h2>
</div>

<div class="line"></div>
<div class="in forms">
  <p class="intro">
    Superdevs combines your various profile and information from the web
    and it makes easy to get in touch with other developers with similar interests.
    Sign up to receive an invite to our initial private release.
  </p>
</div>
<!-- Personal Information -->
<div class="in forms">
  <%= form_for(@person) do |f| %>
    <%= f.error_messages %>
    <p>
      <label for="full_name">YOUR UNIQUE USERNAME (e.g. kentb)</label><br/>
      <%= f.text_field :username, :class => 'box' %>
    </p>

    <p>
      <label for="email">EMAIL (e.g. kentbeck@gmail.com)</label><br/>
      <%= f.text_field :email, :class => 'box' %>
    </p>

    <p>
      <label for="email">PASSWORD</label><br/>
      <%= f.password_field :password, :class => 'box' %>
    </p>

    <p>
      <label for="email">PASSWORD CONFIRMATION</label><br/>
      <%= f.password_field :password_confirmation, :class => 'box' %>
    </p>

    <p>
      <%= f.submit "Request invite", :class => 'com_btn' %>
    </p>
  <% end %>
</div>
