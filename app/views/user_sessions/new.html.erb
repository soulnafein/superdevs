<div class="in">
  <h2>Login</h2>
</div>

<div class="line"></div>

<div class="in forms">
  <iframe src="http://superdevs.rpxnow.com/openid/embed?token_url=<%= user_sessions_url %>" scrolling="no" frameBorder="no" allowtransparency="true" style="width:400px;height:240px"></iframe>

  <p>Or for <span class="highlighter">existing users</span> use the traditional login form</p>
  <%= form_for @user_session do |form| %>
      <%= form.error_messages %>
      <p>
        <%= form.label :username, "Username or Email" %><br/>
        <%= form.text_field :username, :class => 'box' %>
      </p>

      <p>
        <%= form.label :password, "Password" %><br/>
        <%= form.password_field :password, :class => 'box' %>
      </p>

      <p>
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </p>

      <p>
        <%= form.submit "Submit", :class => 'com_btn' %>
      </p>
  <% end %>

  Do you need any help? Please <%= link_to "contact us", contact_us_url %>
</div>